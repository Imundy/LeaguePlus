<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@drawable/default_background_lens_flare"
    android:orientation="vertical"
    tools:context=".PlayerSearchActivity" >

        <Button
            android:id="@+id/FindCurrent"
            android:layout_width="220dip"
            android:layout_height="45dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:background="@drawable/button_background"
            android:gravity="center_vertical"
            android:onClick="findCurrent"
            android:padding="10dip"
            android:text="@string/Find_Current"
            android:textColor="#eedd77"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/EnterNames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:gravity="center_vertical"
            android:text="@string/Enter_Names"
            android:textColor="#eedd77"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/scoutPlayers"
            android:layout_width="150dip"
            android:layout_height="45dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="88dip"
            android:background="@drawable/button_background"
            android:gravity="center_vertical"
            android:onClick="scoutPlayers"
            android:paddingLeft="23dip"
            android:text="@string/Scout_Player"
            android:textColor="#eedd77"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name1"
            android:layout_width="200dip"
            android:layout_height="35dip"
            android:layout_below="@+id/EnterNames"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:hint="@string/Summoner_Name" >

            <requestFocus />
        </EditText>

        <Spinner
            android:id="@+id/regionSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/scoutPlayers"
            android:layout_alignRight="@+id/scoutPlayers"
            android:layout_below="@+id/name1"
            android:layout_marginTop="15dp"
            style="@style/SpinnerTheme"
            />
        
</RelativeLayout>

